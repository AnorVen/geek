body {
  reset();
}

body {
  margin: 0;
  line-height: normal;
  font-family: "Lato", "Helvetica", "Arial", sans-serif;
  width: 100%;
  color: #222222
}

a {
  text-decoration none;
  color: #222222
}

.visually-hidden {
  position: absolute;
  width: 1px;
  height: 1px;
  margin: -1px;
  padding: 0;
  border: 0;
  clip: rect(0 0 0 0);
  overflow: hidden;
}
