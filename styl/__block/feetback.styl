.feetback {
  height: 438px;
  background-image: url(../img/feetback__bg.jpg);
  background-repeat: no-repeat;
  background-size: cover;
  background-position: 0 0
  display: flex;
  flex-wrap: nowrap
  justify-content: center;
  margin-top: 100px;
  &__output {
    position: relative;
    width: 460px;
    margin-top: 120px;

  }
  &__text {

    width: 390px;
    font-size: 16px;
    font-style: italic;
    line-height: 1.63;
    text-align: left;
  }

  &__author {
    font-family: Lato;
    font-size: 16px;
    font-weight: bold;
    letter-spacing: 0.4px;
    text-align: left;
    color: rgb(241, 109, 127);
    margin-top: 7px;
  }
  &__city {
    font-size: 12px;
    font-weight: 300;
    line-height: 1.17;
    letter-spacing: 0.3px;
    color: rgb(34, 34, 36);
  }
  &__img {

    width: 83px;
    height: 83px;
    background-color: rgb(0, 0, 0);
    border-radius 50%;
    background-image: url(../img/feetback.png)
    position: absolute;
    top: -10px;
    left: -110px;
  }

  .subscribe {
    box-sizing: border-box;
    width: 500px;
    height: 100%;
    padding-top: 140px;
    padding-left: 115px;
    border-left: 1px solid #e3e3e3;
    &__title {
      font-size: 24px;
      text-align: center;
      text-transform uppercase;


    }
    &__text {
      font-size: 14px;
      text-align: center;
      margin-top: 5px;
    }
    &__form {
      position: relative
      margin-top: 33px;
    }
    &__input {
      width: 360px;
      height: 45px;
      border-radius: 23px;
      background-color: #e1e1e1;
      padding-left: 18px;


    }
    &__input:active{
      outline none
    }
    &__input:hover{
      outline none
    }
    &__input:focus{
      outline none
    }
    &__submit {
      position: absolute;
      top: 0;
      right: 0;
      width: 104px;
      height: 46px;
      background-color: rgb(241, 109, 127);
      border-bottom-right-radius: 23px;
      border-top-right-radius: 23px;
      color white;

    }
&__submit:active{
  outline none
}
    &__submit:hover{
      outline none
    }
    &__submit:focus{
      outline none
    }
  }

