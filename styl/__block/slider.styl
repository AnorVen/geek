.slider {

  &__img {
    height: 612px;
    background-color: #e8e8e8;

  }
  &__wrap {
    max-width: 1140px;
    margin: 0 auto;
    background-image: url(../img/banner.jpg);
    background-repeat no-repeat;
    background-position: top right;
    background-size: 611px 910px;
    height:100%;
  }
  &__text:before {
    content: "";
    display: block;
    width: 12px;
    height: 92px;
    background-color: rosy-pink;
    position: absolute;
    bottom: 10px;
    left: 0;

  }
  &__text {
    padding-top: 205px;
    position: relative;
    padding-left 24px;
    letter-spacing: 1.5px;
    &--big {
      font-size: 60px;
    }
    &--small {
      font-size: 40px;

    }
    &--pink {
      color: rosy-pink;
    }
  }
}