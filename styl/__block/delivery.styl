.delivery {
  margin-top: 53px;
  &__wrap {
    width: 1140px;
    margin: 0 auto;
  }
  &__item {
    border-bottom: 1px solid border-white
    input {
      display: none
    }
  }
  &__title {
    padding-top: 27px;
    padding-bottom: 26px;
    font-size 16px
    font-weight bold
    display: block;
    text-transform: uppercase;

  }

  &__shippingAdress {
  //display: none
  //display: flex;
    justify-content: left;
    flex-wrap nowrap;
    margin-bottom: 78px;
    margin-left: 35px;
    margin-top: 11px;
  }
  .checkOrReg {
    width: 50%;
    &__title {
      font-size 13px
      text-transform uppercase
    }
    &__text {
      font-size 13px
      margin-top: 7px;
      line-height 1.54
      color: #b3b2b2
    }
    &__register {
      margin-top: 28px;
      margin-bottom: 30px;
    }
    &__label {
      font-size 12px
      text-transform uppercase;
      display: block
      margin-bottom: 13px;
      input {
        margin-right: 10px;
      }
    }
    &-adv {
      &__list {
        margin-top: 33px;
        margin-bottom: 37px;
      }
      &__item {
        font-size 13px
        line-height 1.54;
        color: #b3b2b2;
        padding-top: 3px;
        i {
          padding-right: 3px;
        }
      }
    }

    &__btn {
      width 180px
      height 50px
      background-color white
      border solid 1px #eaeaea
      box-sizing border-box;
      transition: box-shadow 1s;
      text-transform: uppercase;
    }
    &__btn:hover {

      box-shadow: 0px 0 4px 2px rosy-pink;
    }
    &__btn:focus {
      outline none;
    }

  }

  .alreadyRegisted {
    width: 50%
    &__title {
      font-size 13px
      text-transform uppercase;
      padding-bottom: 8px;
    }

    &__text {
      font-size 13px
      line-height 1.54
      color #b3b2b2
    }
    &__label {
      font-size 12px
      line-height 1.67
      display: block;
      padding-top: 18px;
      padding-bottom: 9px;
      input {
        width 390px
        height 45px
        background-color white
        border solid 1px #eaeaea
        box-sizing border-box
        padding 5px;
        padding-left: 20px
        font-size: 20px
      }
    }
    &__coment {
      font-size 13px
      line-height 1.54
      color #ff0d0d;
      margin-top: 20px;
      margin-bottom: 26px;
    }
    &__btn {
      width 180px
      height 50px
      background-color white
      border solid 1px #eaeaea
      transition: box-shadow 1s;
      text-transform uppercase
    }
    &__btn:hover {

      box-shadow: inset 0 0 4px 3px rosy-pink;
    }
    &__btn:focus {
      outline none;
    }
    &__link {
      font-size 14px
      line-height 1.43
      margin-left: 27px;
      padding: 5px;
      margin-top: 10px;
    }
    &__link:hover {
      border-bottom 1px dotted rosy-pink;

    }

  }

}
.delivery__item>input +label+ div{
  display: flex;
  height: 0;
  margin 0;
  padding: 0;
  opacity 0
  z-index: -1;
  transition all 2s;

}

.delivery__item>input:checked +label+ div {
  margin-bottom: 78px;
  margin-left: 35px;
  margin-top: 11px;
  height: auto;
  opacity: 1;
  z-index: 0;
  padding: auto;


}