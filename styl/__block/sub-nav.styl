.sub-nav {
  display: none;
  position: absolute;
  background-color: white;
  border: 1px solid #e8e8e8;
  border-radius 5px;
  z-index: 2;
  box-sizing: border-box
  top: 40px;
  left: 65px;
  width: 845px;
  padding-bottom 20px;
  padding-right: 20px;
  padding-left: 20px;
  justify-content: space-between;
  flex-direction column;
  flex-wrap wrap
  height: 310px;


  &__list{
    box-sizing border-box;
    width: 235px;
    padding-top: 10px;
    

  }


  &__item{
    a{
      display: block;
      padding-top: 7px;
      padding-bottom: 7px;
      text-align: left
      font-size: 12px;

    }
    &--category{
      font-size: 14px;
      font-weight: 900;
      text-transform uppercase;
      border-bottom 1px solid #e8e8e8;
      a{
        font-size: 14px;
      }
    }

  }
    &__super-sale{
      width: 255px;
      height: 115px;
      margin-top: 16px;
      padding-right: 10px;
      margin-left: -20px;
      box-sizing: border-box;
      background-image: url(../img/header__nav_superSale.jpg);
      background-repeat: no-repeat;
      background-size: cover;

      a{
        font-size: 22px;
        padding-top: 55px;
        text-align: left;
        color: white;
        padding-left: 175px;
      }


    }


}

.sub-nav:before {
  top: -5px;
  left: 135px;
  width: 7px;
  position: absolute;
  height: 7px;
  content: ' ';
  transform: rotate(45deg);
  border-top: 1px solid #efefef;
  border-left: 1px solid #efefef;
  background-color: white;
  display: block;

}

.nav__item:hover .sub-nav{
  display: flex;
}

