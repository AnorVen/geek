.sub-nav {
  //display: none;
  position: absolute;
  background-color: #fff;
  border: 1px solid #e8e8e8;
  border-radius 5px;
  z-index: 2;
  box-sizing: border-box
  left: 0
  top: 50px
  width: 845px;
  padding-bottom 20px;
  padding-right: 20px;
  padding-left: 20px;
  display: flex
  justify-content: space-around;
  flex-direction row;
  flex-wrap wrap
  height: 310px;

  &__list{
    box-sizing border-box;
    width: 235px;
    

  }
  &__item a{
    display: block;
    padding-bottom 9px;
    padding-top: 9px;
    text-align: left

  }

}

.sub-nav:before {
  top: -5px;
  left: 34px;
  width: 7px;
  position: absolute;
  height: 7px;
  content: ' ';
  transform: rotate(45deg);
  border-top: 1px solid #efefef;
  border-left: 1px solid #efefef;
  background-color: #fff;
  display: block;

}



