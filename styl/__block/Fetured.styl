.FeturedItems {
  margin-top: 100px;
  &__title {
    font-size: 30px;
    font-weight: bold;
    line-height: 1.8;
    letter-spacing: 0.8px;
    text-align: center;
  }
  &__text {
    font-family: Lato;
    font-size: 14px;
    letter-spacing: 0.4px;
    text-align: center;
    color: #9f9f9f;
  }
  .product {
    display: flex;
    flex-wrap: wrap
    justify-content: space-between;
    width: 1140px;
    margin: 0 auto;
    margin-top: 60px;


  &__item {
    position: relative;
    width: 261px;
    height: 279px;
  }
  &__text {
    font-size: 13px;
    text-align: center;
    padding-left: 15px;
    text-transform uppercase;
  }
  &__price {
    font-size: 16px;
    font-weight: bold;
    text-align: center;
    color: #f16d7f;
    padding-left: 15px;
  }
  &__shadow {
    position: absolute;
    top: 0;
    left: 0;
    width: 261px;
    height: 279px;
    background-color: rgba(0, 0, 0, 0.5);
  }
    &__btn{
      background-color: rgba(0, 0, 0, 0);
      color: #fff;
      width: 123px;
      height: 39px;
      border: solid 1px #ffffff;
      margin: 0 auto;
    }
  }
}
