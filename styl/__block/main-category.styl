.main-category {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  flex-direction column;
  width: 1140px;
  margin: 0 auto;
  margin-top: 100px;
  height: 835px;

  &__item {
    background-position: 0 0;
    background-size: 100%;
    background-repeat: no-repeat;
    position: relative
    width: 560px;
  }
  &__man {
    height: 542px;
    background-image: url(../img/product__man.jpg);

  }
  &__box {
    height: 261px;
    background-image: url(../img/product__box.jpg);

  }
  &__woman {
    height: 261px;
    background-image: url(../img/product__woman.jpg);

  }
  &__kid {
    height: 542px;
    background-image: url(../img/product__kid.jpg);

  }
    &__text{
      position: absolute;
      text-transform uppercase;
      background-color: #fff
      height:50px;
      top: 26px;
      left: 0;
      padding: 16px 20px;
      &--small{
        font-size: 18px;
      }
        &--big{
          font-size: 30px;
          color: #f16d7f;
        }
    }
}


