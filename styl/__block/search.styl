.search {
  position: relative
  &__list:focus {
    outline: none;
  }
  &__item:focus {
    outline: none;
  }
  &__item {
    font-size: 14px;
    padding-left: 10px;
    padding-bottom 9px;
    padding-top: 9px;
    &--title {
      display: none
    }
    &--category {
      text-transform uppercase;
      font-size: 14px;
      font-weight: 900;
      padding: 0 0 9px 0;
      border-bottom: 1px solid #e8e8e8;

    }
  }
  
  
  .search-select {
    display: none
    position: absolute;
    top: 40px;
    left: 0;
    width: 260px;
    background-color: #fff;
    border: 1px solid #e8e8e8;
    border-radius 5px;
    z-index: 2;
    box-sizing: border-box
    padding: 10px;
    padding-top: 0;

    &__item {
      cursor pointer
      font-size: 14px;
      padding-left: 10px;
      padding-bottom 9px;
      padding-top: 9px;
      display: block

      &--category {
        cursor: auto;
        margin-top: 7px;
        text-transform uppercase;
        font-size: 14px;
        font-weight: 900;
        padding: 0 0 9px 0;
        border-bottom: 1px solid #e8e8e8;
        padding-top 9px;

      }

    }
    &__item:hover {
      background-color: #a5a5a5


    }
    &__item--category:hover {
      background-color: #fff
    }

  }
  .search-select:before {
    top: -5px;
    left: 34px;
    width: 7px;
    position: absolute;
    height: 7px;
    content: ' ';
    transform: rotate(45deg);
    border-top: 1px solid #efefef;
    border-left: 1px solid #efefef;
    background-color: #fff;
    display: block;

  }
}
  .search:hover .search-select{
    display: block
  }